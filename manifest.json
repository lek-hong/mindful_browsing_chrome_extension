{
  "manifest_version": 3,
  "name": "time_management_v2_options",
  "version": "2.0.1",
  "description": "X second pause before YouTube",
  "permissions": ["tabs", "scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["node_modules/jquery/dist/jquery.min.js", "node_modules/bootstrap/dist/js/bootstrap.min.js", "intervention/content-script.js"],
      "css": ["node_modules/bootstrap/dist/css/bootstrap.min.css"],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "intervention/intervention.html" ],
      "matches": [ "<all_urls>"] 
    }]
}